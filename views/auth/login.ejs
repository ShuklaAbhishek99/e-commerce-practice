<% layout('layouts/boilerplate') -%>

  <div class="row newForm my-5">
    <h1 class="text-center">Login</h1>
    <div class="col-6 mx-auto">
      <p><%- include('../partials/flash') %></p>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3 flex align-items-center justify-content-center">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Username"
            name="username" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <div>
          <p class="mt-3">Create New Account <a href="/signup">SignUp</a></p>
        </div>
      </form>
    </div>
  </div>
<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-lg-4 mx-auto mb-4">
        <div class="card" style="width: 20rem;">
            <img src="<%= product.img %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    <%= product.name %>
                </h5>
                <h5>$ <%= product.price %>
                </h5>
                <p class="card-text">
                    <%= product.desc %>
                </p>
                <a href="#" class="btn btn-primary btn-sm">Buy Now</a>
                <a href="#" class="btn btn-success btn-sm">Add To Cart</a>
                <a href="/products/<%= product._id %>/edit" class="btn btn-info btn-sm">Edit</a>
                <form class="d-inline" action="/products/<%= product._id %>/?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mx-auto">
        <h2 class="text-center display-6">Leave Your Review</h2>
        <form action="/products/<%= product._id %>/review" method="POST">
            <!-- <div class="mb-3">
                <label for="rating">Rating</label>
                <input type="range" class="form-control" id="rating" name="rating" min="0" max="5">
            </div> -->
            <!-- This is Starability CSS -->
            <div class="mb-3">
                <fieldset class="starability-coinFlip">
                    <legend>Rating</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." required/>
                    <input type="radio" id="first-rate1" name="rating" value="1" required />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" required />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" required />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" required />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" required />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            </div>
            <div class="mb-3">
                <legend for="comment">Comment</legend>
                <textarea class="form-control" name="comment" id="comment" cols="30" rows="6" required></textarea>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Submit</button>
        </form>

        <div>
            <% for( let review of product.reviews ) { %>
                <div class="card my-3">
                    <!-- this is how u include starability result -->
                    <h5 class="starability-result m-3" data-rating="<%= review.rating %>"></h5>
                    <div class="card-body">
                      <p class="card-text"><%= review.comment %></p>
                      <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                  </div>
            <% } %>
        </div>
    </div>
</div>